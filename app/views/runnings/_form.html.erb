<%= form_for @running, :html => {:class => 'uk-form uk-form-stacked'} do |f| %>

    <% if @running.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@running.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @running.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="uk-grid" data-uk-grid-margin>

      <!-- Main components -->
      <div class="uk-width-medium-2-3">

        <div class="uk-panel uk-panel-box uk-panel-box-secondary uk-panel-header">

            <h3 class="uk-panel-title">Common</h3>

            <!-- Title -->
            <div class="uk-form-row">
              <label class="uk-form-label" for="entry_location">Title</label>

              <div class="uk-form-controls">
                <%= f.text_field :title, class: 'uk-width-1-1' %>
              </div>
            </div>

            <!-- Description -->
            <div class="uk-form-row uk-margin-bottom">
              <label class="uk-form-label" for="comment">Description</label>

              <div class="uk-form-controls">
                <%= f.text_area :comment, class: 'uk-width-1-1' %>
              </div>
            </div>

            <!-- Entry date -->
            <div class="uk-form-row">
              <label class="uk-form-label" for="entry_date">Date</label>

              <div class="uk-form-controls">
                <!--<i class="uk-icon-calendar"></i>-->
                <%= f.text_field :entry_date, data: {:uk_datepicker => '{weekstart:0, format:"YYYY-MM-DD"}'} %>
              </div>
            </div>


            <!-- Entry time -->
            <div class="uk-form-row">
              <label class="uk-form-label" for="entry_date">Time</label>

              <div class="uk-form-controls">
                <!--<i class="uk-icon-calendar"></i>-->
                <%= f.text_field :entry_time, data: {:uk_timepicker => '{format:"24h"}'} %>
              </div>
            </div>


            <!-- Location -->
            <div class="uk-form-row">
              <label class="uk-form-label" for="entry_location">Location</label>

              <div class="uk-form-controls">
                <%= f.text_field :entry_location, class: 'uk-width-1-1' %>
              </div>
            </div>

        </div>

        <div class="uk-panel uk-panel-box uk-panel-box-secondary uk-panel-header">

          <h3 class="uk-panel-title">Running Details</h3>

            <!-- Duration -->
            <div class="uk-form-row">
              <label class="uk-form-label" for="entry_duration">Duration</label>

              <div class="uk-form-controls">
                <%= f.text_field :entry_duration, class: 'uk-width-1-1' %>
              </div>
            </div>

            <!-- Course length -->
            <div class="uk-form-row">
              <label class="uk-form-label" for="course_length">Course length</label>

              <div class="uk-form-controls">
                <%= f.text_field :course_length, class: 'uk-width-1-1' %>
              </div>
            </div>

            <!-- Course Type -->
            <div class="uk-form-row">
              <label class="uk-form-label" for="course_type">Course Type</label>

              <div class="uk-form-controls">
                <%= f.text_field :course_type, class: 'uk-width-1-1' %>
              </div>
            </div>

            <!-- Number of rounds -->
            <div class="uk-form-row">
              <%= f.label :number_of_rounds, class: 'uk-form-label' %>
              <div class="uk-form-controls">
                <%= f.text_field :number_of_rounds, class: 'uk-width-1-1' %>
              </div>
            </div>

            <!-- latitude longitude hidden -->
            <%= f.hidden_field :latitude %>
            <%= f.hidden_field :longitude %>

         </div>

        </div>


      <div class="uk-width-medium-1-3">

          <!-- Friends -->
          <div class="uk-panel uk-panel-box">
            <h3 class="uk-panel-title"><i class="uk-icon-users"></i> Invite friends</h3>
            <% @friends.each do |friend| %>
                <div class="uk-margin-small">
                  <% if friend.is_participant_of @running.id %>
                      <label><input type="checkbox" name="running[users_invited][]" value="<%= friend.id %>" checked> <%= friend.username %></label>
                  <% else %>
                      <label><input type="checkbox" name="running[users_invited][]" value="<%= friend.id %>"> <%= friend.username %></label>
                  <% end %>
                </div>
            <% end %>
          </div>
      </div>
    </div> <!-- grid -->

    <div class="uk-form-row uk-margin-top">
      <div class="uk-form-controls">
        <button class="uk-button uk-button-primary">Save</button>
      </div>
    </div>

<% end %>