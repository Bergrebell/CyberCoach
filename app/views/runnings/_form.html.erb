<%= form_for @running, :html => {:class => 'uk-form uk-form-stacked'} do |f| %>

    <% if @running.errors.any? %>

        <%= render :partial => 'sport_sessions/error_messages', :locals => {:session => @running} %>

    <% end %>

    <div class="uk-grid" data-uk-grid-margin>

      <!-- Main components -->
      <div class="uk-width-medium-2-3">

        <!-- Common fields -->
        <%= render :partial => 'sport_sessions/new_form_common', :locals => {:f => f} %>

        <div class="uk-panel uk-panel-box uk-panel-box-secondary uk-panel-header">

          <h3 class="uk-title">Running Details</h3>

          <!-- Course Type -->
          <div class="uk-form-row">
            <label class="uk-form-label" for="course_type">Course Type</label>

            <div class="uk-form-controls">
              <%= f.text_field :course_type, class: 'uk-width-1-1' %>
            </div>
          </div>

          <!-- Duration -->
          <div class="uk-form-row uk-display-inline-block uk-margin-right">
            <label class="uk-form-label" for="entry_duration">Duration (minutes)</label>

            <div class="uk-form-controls">
              <%= f.text_field :entry_duration, class: 'uk-width-1-1', placeholder: 'minutes' %>
            </div>
          </div>

          <!-- Course length -->
          <div class="uk-form-row uk-display-inline-block uk-margin-right">
            <label class="uk-form-label" for="course_length">Course length (meters)</label>

            <div class="uk-form-controls">
              <%= f.text_field :course_length, class: 'uk-width-1-1', placeholder: 'meters' %>
            </div>
          </div>

          <!-- Number of rounds -->
          <div class="uk-form-row uk-display-inline-block">
            <%= f.label :number_of_rounds, class: 'uk-form-label' %>
            <div class="uk-form-controls">
              <%= f.text_field :number_of_rounds, class: 'uk-width-1-1' %>
            </div>
          </div>

        </div>

      </div>


      <div class="uk-width-medium-1-3">

        <!-- Friends -->
        <div class="uk-panel uk-panel-box">
          <h3 class="uk-title"><i class="uk-icon-users"></i> Invite friends</h3>
          <% @friends.each do |friend| %>
              <div class="uk-margin-small">
                <% if friend.is_participant_of @running.id %>
                    <label><input type="checkbox" name="running[users_invited][]" value="<%= friend.id %>" checked> <%= friend.username %>
                    </label>
                <% else %>
                    <label><input type="checkbox" name="running[users_invited][]" value="<%= friend.id %>"> <%= friend.username %>
                    </label>
                <% end %>
              </div>
          <% end %>
        </div>
      </div>
    </div> <!-- grid -->

    <div class="uk-form-row uk-margin uk-margin-large-bottom">
      <div class="uk-form-controls">
        <button class="uk-button uk-button-primary">Save</button>
      </div>
    </div>

<% end %>