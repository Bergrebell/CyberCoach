<% if @running.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@running.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @running.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<div class="uk-grid">

  <!-- Main components -->
  <div class="uk-width-small-1-2">

    <h3>Details</h3>

    <!-- Entry date -->
    <div class="uk-form-row">
      <label class="uk-form-label" for="entry_date">Date</label>

      <div class="uk-form-controls">
        <!--<i class="uk-icon-calendar"></i>-->
        <%= f.text_field :entry_date, class: 'uk-width-1-1', data: {:uk_datepicker => '{weekstart:0, format:"YYYY-MM-DD"}'} %>
      </div>
    </div>

    <!-- Location -->
    <div class="uk-form-row">
      <label class="uk-form-label" for="entry_location">Location</label>

      <div class="uk-form-controls">
        <%= f.text_field :entry_location, class: 'uk-width-1-1' %>
      </div>
    </div>

    <!-- Duration -->
    <div class="uk-form-row">
      <label class="uk-form-label" for="entry_duration">Duration</label>

      <div class="uk-form-controls">
        <%= f.text_field :entry_duration, class: 'uk-width-1-1' %>
      </div>
    </div>

    <!-- Course length -->
    <div class="uk-form-row">
      <label class="uk-form-label" for="course_length">Course length</label>

      <div class="uk-form-controls">
        <%= f.text_field :course_length, class: 'uk-width-1-1' %>
      </div>
    </div>

    <!-- Course Type -->
    <div class="uk-form-row">
      <label class="uk-form-label" for="course_type">Course Type</label>

      <div class="uk-form-controls">
        <%= f.text_field :course_type, class: 'uk-width-1-1' %>
      </div>
    </div>

    <!-- Number of rounds -->
    <div class="uk-form-row">
      <%= f.label :number_of_rounds, class: 'uk-form-label' %>
      <div class="uk-form-controls">
        <%= f.text_field :number_of_rounds, class: 'uk-width-1-1' %>
      </div>
    </div>

    <!-- Comment -->
    <div class="uk-form-row uk-margin-bottom">
      <label class="uk-form-label" for="comment">Comment</label>

      <div class="uk-form-controls">
        <%= f.text_area :comment, class: 'uk-width-1-1' %>
      </div>
    </div>

  </div>

  <!-- Friends -->
  <% if @friends.count > 0 %>

      <div class="uk-width-small-1-4">

        <h3>Invite friends</h3>

        <% @friends.each do |friend| %>
            <div>
              <% if friend.is_participant_of @running.id %>
                  <input type="checkbox" name="running[users_invited][]" value="<%= friend.id %>" checked>
              <% else %>
                  <input type="checkbox" name="running[users_invited][]" value="<%= friend.id %>">
              <% end %>
              <%= friend.username %>
            </div>
        <% end %>

      </div>
  <% end %>

</div> <!-- grid -->

<div class="uk-form-row uk-margin-top">
  <div class="uk-form-controls">
    <button class="uk-button uk-button-primary">Save</button>
  </div>
</div>
