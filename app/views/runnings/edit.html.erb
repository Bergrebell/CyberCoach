<h1>Editing running</h1>

<%= form_for @running, url: running_path(@running), html: { class: 'uk-form uk-form-stacked' } do |f| %>
    <% if @running.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@running.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @running.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="uk-form-row">
      <label class="uk-form-label" for="entry_date">Date</label>
      <div class="uk-form-controls uk-form-icon">
        <i class="uk-icon-calendar"></i>
        <%= f.text_field :entry_date, class: 'datepicker' %>
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="entry_location">Location</label>
      <div class="uk-form-controls">
        <%= f.text_field :entry_location %>
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="entry_duration">Duration</label>
      <div class="uk-form-controls">
        <%= f.number_field :entry_duration %>
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="course_length">Course length</label>
      <div class="uk-form-controls">
        <%= f.number_field :course_length %>
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="course_type">Course Type</label>
      <div class="uk-form-controls">
        <%= f.text_field :course_type %>
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="number_of_rounds">Number of rounds</label>
      <div class="uk-form-controls">
        <%= f.number_field :number_of_rounds %>
      </div>
    </div>
    <div class="uk-form-row">
      <label class="uk-form-label" for="comment">Comment</label>
      <div class="uk-form-controls">
        <%= f.text_area :comment %>
      </div>
    </div>
    <% #This adds the needed field for the CRSF protection to the form %>
    <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
    <div class="uk-form-row">
      <div class="uk-form-controls">
        <%= f.button 'Edit', class: 'uk-button uk-button-primary uk-margin-top' %>
      </div>
    </div>
<% end %>


