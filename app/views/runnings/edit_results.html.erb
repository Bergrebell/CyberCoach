<%= form_for @running, url: running_path(@running.id), method: :put, :html => {:class => 'uk-form uk-form-horizontal'} do |f| %>

    <h2>Event</h2>

    <ul>
      <li><%= @running.entry_date %></li>
      <li><%= @running.entry_location %></li>
      <li>Show this stuff nice :)</li>
    </ul>


    <h2>Edit results</h2>

    <!-- Length -->
    <div class="uk-form-row">
      <label class="uk-form-label" for="length">Length</label>
      <div class="uk-form-controls">
      <input type="text" name="results[length]" id="length" value="<%= @results.length %>">
      </div>
    </div>

    <!-- Time -->
    <div class="uk-form-row">
      <label class="uk-form-label" for="time">Time</label>
      <div class="uk-form-controls">
        <input type="text" name="results[time]" id="time" value="<%= @results.time %>">
      </div>
    </div>

    <div class="uk-form-row uk-margin-top">
      <div class="uk-form-controls">
        <button class="uk-button uk-button-primary">Save</button>
      </div>
    </div>

<% end %>