<div class="uk-grid" data-uk-grid-margin>
  <div class="uk-width-medium-3-4">
    <h1 class="uk-heading-large"><%= @running.title %></h1>
    <p class="uk-text-large"><%= @running.comment %></p>
  </div>
</div>

<div class="uk-grid" data-uk-grid-margin>
  <div class="uk-width-medium-2-3">

    <div class="uk-panel uk-panel-header uk-panel-box uk-panel-box-secondary">
      <h3 class="uk-title">Edit Results</h3>
      <form class="uk-form uk-form-stacked" action="<%= running_path @running %>/result/save" method="POST">

        <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>

        <div class="uk-form-row">
          <label class="uk-form-label">Time</label>
          <div class="uk-form-controls">
            <input type="text" name="time" placeholder="" class="uk-width-1-1" value="<%= @result.time %>">
          </div>
        </div>

        <div class="uk-form-row">
          <label class="uk-form-label">Length</label>
          <div class="uk-form-controls">
            <input type="text" name="length" placeholder="" class="uk-width-1-1" value="<%= @result.length %>">
          </div>
        </div>

        <div class="uk-form-row">
          <div class="uk-form-controls">
            <button class="uk-button uk-button-primary">Save</button>
          </div>
        </div>

      </form>
    </div>

    <%= render :partial => 'table_attributes', :locals => {:running => @running} %>

  </div>

  <div class="uk-width-medium-1-3">

    <%= render :partial => 'sport_sessions/users_joining', :locals => { :session => @running } %>

    <!--<div class="uk-panel uk-panel-box">-->
      <!--<h3 class="uk-panel-title"><i class="uk-icon-star"></i> Achievements</h3>-->
      <!--Yeah :)-->
    <!--</div>-->

  </div>
</div>