<h1>Listing achievements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Points</th>
      <th>Sport</th>
      <th>Rules</th>
      <th>Validator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.title %></td>
        <td><%= achievement.points %></td>
        <td><%= achievement.sport %></td>
        <td><%= achievement.rules %></td>
        <td><%= achievement.validator.type %></td>
        <td><%= link_to 'Show', achievement %></td>
        <td><%= link_to 'Edit', edit_achievement_path(achievement) %></td>
        <td><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Achievement', new_achievement_path %>
