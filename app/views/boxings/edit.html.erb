<h1>Editing boxing</h1>

<%= form_for @boxing, url:boxings_path(@boxing.id), method: :put do |f| %>
    <% if @boxing.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="field">
      <%= f.label :number_of_rounds %>
      <br>
      <%= f.text_field :number_of_rounds %>
    </div>

    <div class="field">
      <%= f.label :entry_location %>
      <br>
      <%= f.text_field :entry_location %>
    </div>


    <div class="field">
      <%= f.label :entry_duration %>
      <br>
      <%= f.text_field :entry_duration %>
    </div>


    <div class="field">
      <%= f.label :course_type %>
      <br>
      <%= f.text_field :course_type %>
    </div>

    <div class="field">
      <%= f.label :course_length %>
      <br>
      <%= f.text_field :course_length %>
    </div>


    <div class="field">
      <%= f.label :comment %>
      <br>
      <%= f.text_area :comment %>
    </div>


    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<%= link_to 'Show', action: 'show', id: @boxing.id %> |
<%= link_to 'Back', boxings_path %>
