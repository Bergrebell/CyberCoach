<div class="uk-grid" data-uk-grid-margin>
  <div class="uk-width-medium-3-4">
    <h1 class="uk-heading-large"><%= @boxing.title %></h1>

    <p class="uk-text-large"><%= @boxing.comment %></p>
  </div>
</div>

<% if @result.errors.any? %>

    <%= render :partial => 'sport_sessions/error_messages', :locals => {:session => @result} %>

<% end %>

<div class="uk-grid" data-uk-grid-margin>
  <div class="uk-width-medium-2-3">

    <div class="uk-panel uk-panel-header uk-panel-box uk-panel-box-secondary">
      <h3 class="uk-title">Edit Results</h3>

      <%= form_for :sport_session_result, url: boxing_path(@boxing) + '/result/save', action: :post, html: {class: 'uk-form uk-form-stacked'} do |f| %>

          <div class="uk-form-row">
            <%= f.label :time, 'Overall Time (minutes)', :class => 'uk-form-label' %>

            <div class="uk-form-controls">
              <%= f.text_field :time, placeholder: 'minutes', value: @result.time, class: 'uk-width-1-1' %>
            </div>
          </div>

          <div class="uk-form-row">
            <label class="uk-form-label">Knockout opponent *</label>

            <div class="uk-form-controls">
              <div class="uk-grid">

                <div class="uk-width-medium-1-4">
                  <%= f.label :knockout_opponent, "No", value: false %>
                </div>
                <div class="uk-width-medium-3-4">
                  <%= f.radio_button :knockout_opponent, false, checked: !@result.knockout_opponent %>
                </div>

                <div class="uk-width-medium-1-4">
                  <%= f.label :knockout_opponent, "Yes", value: true %>
                </div>

                <div class="uk-width-medium-3-4">
                  <%= f.radio_button :knockout_opponent, true, checked: @result.knockout_opponent %>
                </div>

              </div>

            </div>
          </div>

          <div class="uk-form-row">
            <label class="uk-form-label">Number of rounds fought *</label>

            <div class="uk-form-controls">
              <%= f.text_field :number_of_rounds, placeholder: 'rounds', value: @result.number_of_rounds, class: 'uk-width-1-1' %>
            </div>
          </div>

          <div class="uk-form-row">
            <label class="uk-form-label">Points received</label>

            <div class="uk-form-controls">
              <%= f.text_field :points, placeholder: 'points', value: @result.points, class: 'uk-width-1-1' %>
            </div>
          </div>


          <div class="uk-form-row">
            <div class="uk-form-controls">
              <%= f.button 'Save', class: 'uk-button uk-button-primary' %>
            </div>
          </div>

      <% end %>


    </div>

    <%= render :partial => 'table_attributes', :locals => {:sport_session => @boxing} %>

  </div>

  <div class="uk-width-medium-1-3">

    <%= render :partial => 'sport_sessions/users_joining', :locals => {:sport_session => @boxing} %>

    <!--<div class="uk-panel uk-panel-box">-->
    <!--<h3 class="uk-panel-title"><i class="uk-icon-star"></i> Achievements</h3>-->
    <!--Yeah :)-->
    <!--</div>-->

  </div>
</div>