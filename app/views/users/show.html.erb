
<div class="uk-panel uk-panel-box">
  <div class="uk-panel uk-text-center">
 <p>
  <%= image_tag @gravatar_url, class: "uk-border-circle" %>
</p>
</div>
<hr>


  <div class="uk-panel uk-text-center">


  <p>
  <i class="uk-icon-user"></i> <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <i class="uk-icon-check"></i> <strong>Realname:</strong>
  <%= @user.real_name %>
</p>


<p>
  <i class="uk-icon-envelope"></i> <strong>Email:</strong>
  <%= @user.email %>
</p>
<hr>

<!--
<p>
  <strong>Public visible:</strong>
  <%= @user.public_visible %>
</p>
-->

<p>
  <i class="uk-icon-share-alt"></i> <strong>Friends:</strong><br>
</p>

    <div class="uk-grid">
      <% @user.partnerships.each do |user| %>
          <%= content_tag :div, :class => "uk-width-1-3" do %>
                <%= image_tag avatar_url(user.partner_of(@user).email.downcase), class: "uk-border-circle" %>
                <%= user.partner_of(@user).username %>
        <% end %>
          <% end %>
    </div>
  <hr>

  <p>
    <i class="uk-icon-calendar-o"></i> <strong>Latest activities:</strong>
    <%=  %>
  </p>
<br>
  </div>

 <div class="uk-grid">
   <% @sports_past.map do |f| %>
         <div class="uk-width-1-4 uk-text-center"><strong>Type:</strong> <%= f.type %></div>
         <div class="uk-width-1-4 uk-text-center"><strong>Title:</strong> <%= f.title %></div>
         <div class="uk-width-1-4 uk-text-center"><strong>Datum:</strong> <%= f.date %></div>
         <div class="uk-width-1-4 uk-text-center"><strong>Location:</strong> <%= f.location %></div>
   <% end %>
 </div>



<% if current_user and @user.username != current_user.username and not current_user.befriended_with?(@user) %>
    <%= button_to 'Send friend request', controller: 'friends', action: 'create', method: :post, username: @user.username %>
<% end %>
  <br>
<%= link_to 'Back', users_path %>
</div>
