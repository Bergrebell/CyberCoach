<h1>Sport Sessions</h1>

Create new sport session: <% @item_paths = {"Running" => new_running_path, "Cycling" => new_cycling_path, "Boxing" => new_boxing_path, "Soccer" => new_soccer_path}%>
<%= select_tag :edit_item, options_for_select(@item_paths)%>

<script type="text/javascript">
    $('#edit_item').change(function() {
        window.location = $(this).find('option:selected').val();
    });
</script>


<% @sessions.each do |session| %>

    <p>
      <%= link_to "id #{session.id}", sport_session_path(session) %> <br>
      date-created: <%= session.date_created.try(:strftime, "%Y %m %d, %T") %> <br>
      type: <%= session.type %> <br>
      uri: <%= session.uri %> <br>
      uri: <%= session.uri %> <br>
      comment: <%= session.comment %> <br>
      course-type <%= session.course_type %> <br>
      number of rounds <%= session.number_of_rounds %> <br>
      entry-location <%= session.entry_location %> <br>
      entry-duration <%= session.entry_duration %> <br>

      <%= link_to 'Destroy', sport_session_path(session), method: :delete   %>

    </p>
<% end %>

