<h1>Sport Sessions</h1>

<div class="uk-button-dropdown uk-align-right" data-uk-dropdown>
  <button class="uk-button uk-button-primary">
    <i class="uk-icon uk-icon-plus"></i>
    Create Sport Session
  </button>
  <div class="uk-dropdown uk-dropdown-small">
    <ul class="uk-nav uk-nav-dropdown">
      <li><%= link_to "Running", new_running_path %></li>
      <li><%= link_to "Boxing", new_boxing_path %></li>
      <li><%= link_to "Soccer", new_soccer_path %></li>
      <li><%= link_to "Cycling", new_cycling_path %></li>
    </ul>
  </div>
</div>

<%= render partial: 'sport_sessions/sport_sessions_filter', :locals => {:path => sport_sessions_path}%>


<ul class="uk-tab uk-margin-large-top" data-uk-tab="{connect: '#tabs-content'}">
  <li class="uk-active"><a href="#">Upcoming Events</a></li>
  <li><a href="#">Past Events</a></li>
  <li><a href="#">Invitations<% if @invitations.count > 0 %> <span class="uk-text-muted">(<%= @invitations.count %>)</span><% end %></a></li>
</ul>

<ul id="tabs-content" class="uk-switcher uk-margin">

  <!-- Upcoming events -->
  <li>

    <%= render partial: 'sport_sessions/sport_sessions_table', :locals => { :sessions => @sessions_upcoming, :show_type => true } %>

  </li>

  <!-- Past events -->
  <li>

    <%= render partial: 'sport_sessions/sport_sessions_table', :locals => { :sessions => @sessions_past, :show_type => true } %>

  </li>

  <!-- Invitations -->
  <li>

    <%= render partial: 'sport_sessions/sport_sessions_table', :locals => { :sessions => @invitations, :show_type => true, :confirm_decline_buttons => true } %>

  </li>

</ul>